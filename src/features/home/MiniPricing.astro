---
const pricingData = [
  { type: "Garsónka", price: "65", size: "do 25m²" },
  { type: "1-izbový byt", price: "70", size: "25-35m²", popular: false },
  { type: "2-izbový byt", price: "140", size: "40-60m²", popular: true },
  { type: "3-izbový byt", price: "240", size: "60-80m²" },
  { type: "4-izbový byt", price: "350", size: "80-100m²" },
  { type: "Rodinný dom", price: "Ponuka", size: "podľa obhliadky" },
];
---

<section class="mini-pricing">
  <div class="container">
    <div class="header">
      <h2 class="title">Transparentný cenník</h2>
      <p class="subtitle">Férové ceny bez skrytých poplatkov. Presnú ponuku pripravíme po obhliadke.</p>
    </div>

    <div class="pricing-grid">
      {pricingData.map((item) => (
        <div class={`pricing-card ${item.popular ? 'popular' : ''}`}>
          {item.popular && (
            <div class="popular-badge">⭐ Najpopulárnejšie</div>
          )}
          
          <div class="card-header">
            <div class="unit-type">{item.type}</div>
            <div class="price-box">
              {item.price !== "Ponuka" ? (
                <>
                  <span class="price">od {item.price}€</span>
                  <span class="unit-size">{item.size}</span>
                </>
              ) : (
                <>
                  <span class="price-ponuka">Individuálna ponuka</span>
                  <span class="unit-size">{item.size}</span>
                </>
              )}
            </div>
          </div>
          
          <div class="features">
            <div class="feature-item">✓ Balenie a ochrana nábytku</div>
            <div class="feature-item">✓ Demontáž a montáž</div>
            <div class="feature-item">✓ Preprava a vykládka</div>
          </div>
          
          <div class="card-footer">
            <a href="/cennik" class={`btn ${item.popular ? 'btn-primary' : 'btn-outline'}`}>
              Zistiť viac →
            </a>
          </div>
        </div>
      ))}
    </div>

    <div class="actions">
      <a href="/cennik" class="btn-full-pricing">
        Zobraziť kompletný cenník →
      </a>
    </div>
  </div>
</section>

<style>
  .mini-pricing {
    padding: 64px 0;
    background: #f8fafc;
  }
  .container {
    max-width: 1120px;
    margin: 0 auto;
    padding: 0 16px;
  }
  .header {
    text-align: center;
    margin-bottom: 56px;
  }
  .title {
    font-size: 36px;
    font-weight: 800;
    margin-bottom: 8px;
    color: #111827;
  }
  .subtitle {
    font-size: 18px;
    color: #4b5563;
  }
  .pricing-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 32px;
  }
  .pricing-card {
    background: white;
    padding: 40px 32px;
    border-radius: 24px;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.05);
    position: relative;
    transition: all 0.3s ease;
    display: flex;
    flex-direction: column;
    border: 1px solid #e2e8f0;
  }
  .pricing-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1);
  }
  .pricing-card.popular {
    border-color: #065f46;
    box-shadow: 0 10px 15px -3px rgba(6, 95, 70, 0.1);
    transform: scale(1.05);
  }
  .popular-badge {
    position: absolute;
    top: -16px;
    left: 50%;
    transform: translateX(-50%);
    background: linear-gradient(90deg, #111827 0%, #065f46 100%);
    color: white;
    padding: 6px 16px;
    border-radius: 99px;
    font-size: 14px;
    font-weight: 600;
    white-space: nowrap;
    box-shadow: 0 4px 6px -1px rgba(6, 95, 70, 0.2);
  }
  .card-header {
    text-align: center;
    margin-bottom: 32px;
  }
  .unit-type {
    font-size: 14px;
    font-weight: 600;
    color: #64748b;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: 8px;
  }
  .price-box {
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  .price {
    font-size: 36px;
    font-weight: 800;
    color: #111827;
  }
  .price-ponuka {
    font-size: 24px;
    font-weight: 700;
    color: #111827;
  }
  .unit-size {
    font-size: 14px;
    color: #64748b;
    margin-top: 4px;
  }
  .features {
    margin-bottom: 32px;
    flex-grow: 1;
  }
  .feature-item {
    font-size: 15px;
    color: #4b5563;
    margin-bottom: 12px;
    display: flex;
    align-items: center;
    gap: 8px;
  }
  .card-footer .btn {
    display: block;
    text-align: center;
    padding: 12px;
    border-radius: 12px;
    text-decoration: none;
    font-weight: 600;
    transition: all 0.2s ease;
  }
  .btn-primary {
    background: #111827;
    color: white;
  }
  .btn-primary:hover {
    background: #1f2937;
  }
  .btn-outline {
    border: 1px solid #e2e8f0;
    color: #111827;
  }
  .btn-outline:hover {
    background: #f8fafc;
    border-color: #cbd5e1;
  }
  .actions {
    text-align: center;
    margin-top: 48px;
  }
  .btn-full-pricing {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 16px 32px;
    background: white;
    border: 1px solid #e2e8f0;
    border-radius: 12px;
    color: #111827;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.2s ease;
  }
  .btn-full-pricing:hover {
    background: #f8fafc;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.05);
  }
</style>
