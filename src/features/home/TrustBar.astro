<section class="trust-bar relative overflow-hidden py-12">
  <!-- Subtle pattern background -->
  <div class="absolute inset-0 opacity-10 pointer-events-none" style="background-image: radial-gradient(#ffffff 1px, transparent 1px); background-size: 20px 20px;"></div>
  
  <div class="container relative z-10">
    <div class="glass-saturate rounded-[2.5rem] bg-white/5 border border-white/10 p-8 md:p-12">
      <div class="stats-grid">
        {stats.map((stat) => (
          <div class="stat-item group hover:scale-105 transition-transform duration-300 cursor-default">
            <div class="stat-icon mb-4 transform group-hover:rotate-12 transition-transform">{stat.icon}</div>
            <div class="stat-value text-glow">{stat.value}</div>
            <div class="stat-label uppercase tracking-widest">{stat.label}</div>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>

<style>
  .trust-bar {
    background: linear-gradient(135deg, #0f172a 0%, #064e3b 50%, #0f172a 100%);
    color: white;
  }
  .container {
    max-width: 1120px;
    margin: 0 auto;
    padding: 0 16px;
  }
  .stats-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 32px;
    text-align: center;
  }
  @media (min-width: 768px) {
    .stats-grid {
      grid-template-columns: repeat(4, 1fr);
    }
  }
  .stat-icon {
    font-size: 40px;
    line-height: 1;
  }
  .stat-value {
    font-size: clamp(28px, 5vw, 42px);
    font-weight: 900;
    margin-bottom: 4px;
    letter-spacing: -0.02em;
  }
  .stat-label {
    font-size: 12px;
    font-weight: 700;
    opacity: 0.7;
  }
</style>
