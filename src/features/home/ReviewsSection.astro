---
const reviews = [
  {
    name: "Marek J.",
    text: "Sťahovanie prebehlo hladko a profesionálne. Chlapci boli veľmi opatrní s nábytkom a všetko stiahli v rekordnom čase. Odporúčam!",
    rating: 5,
    location: "Bratislava - Staré Mesto"
  },
  {
    name: "Lucia K.",
    text: "Maximálna spokojnosť. Potrebovali sme sťahovanie cez víkend a nebol to žiaden problém. Férová komunikácia a skvelá cena.",
    rating: 5,
    location: "Bratislava - Petržalka"
  },
  {
    name: "Peter S.",
    text: "Sťahovali nám kanceláriu. Všetko bolo perfektne zorganizované, žiadne prestoje. Skvelý tím, určite ich využijeme znova.",
    rating: 5,
    location: "Bratislava - Ružinov"
  }
];
---

<section class="reviews-section py-20 bg-gray-50 overflow-hidden relative" id="recenzie">
  <div class="absolute -top-24 -left-24 w-96 h-96 bg-primary/5 rounded-full blur-3xl"></div>
  
  <div class="container mx-auto max-w-7xl px-4 relative z-10">
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-5xl font-black text-gray-900 mb-6" style="font-family: 'Nunito Sans', sans-serif;">
        Čo o nás hovoria klienti
      </h2>
      <div class="flex items-center justify-center gap-2 mb-4">
        <span class="text-2xl">⭐ ⭐ ⭐ ⭐ ⭐</span>
        <span class="font-bold text-gray-900">4.9 / 5 na Google</span>
      </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      {reviews.map((review) => (
        <div class="review-card p-8 bg-white rounded-3xl border border-gray-100 shadow-xl shadow-gray-200/50 hover:-translate-y-2 transition-all">
          <div class="rating mb-4 text-yellow-400">★★★★★</div>
          <p class="text-gray-600 italic mb-8 leading-relaxed">"{review.text}"</p>
          <div class="flex items-center gap-4">
            <div class="w-12 h-12 bg-primary/10 rounded-full flex items-center justify-center text-primary font-bold">
              {review.name.charAt(0)}
            </div>
            <div>
              <span class="block font-black text-gray-900">{review.name}</span>
              <span class="text-xs text-gray-400">{review.location}</span>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .review-card {
    display: flex;
    flex-direction: column;
  }
</style>
