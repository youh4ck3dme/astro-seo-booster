<style>
  .footer {
    background: #f8fafc;
    border-top: 1px solid #e2e8f0;
    padding: 64px 0 32px;
    margin-top: 64px;
  }
  .container {
    max-width: 1120px;
    margin: 0 auto;
    padding: 0 16px;
  }
  .footer-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 48px;
    margin-bottom: 64px;
  }
  .footer-logo {
    display: flex;
    align-items: center;
    gap: 8px;
    margin-bottom: 16px;
  }
  .footer-logo-icon {
    font-size: 20px;
  }
  .footer-logo-text {
    font-size: 18px;
    font-weight: 800;
    color: #111827;
  }
  .footer-desc {
    font-size: 14px;
    color: #64748b;
    line-height: 1.6;
  }
  .footer-title {
    font-size: 14px;
    font-weight: 700;
    color: #111827;
    margin-bottom: 20px;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }
  .footer-links {
    list-style: none;
    padding: 0;
    display: flex;
    flex-direction: column;
    gap: 12px;
  }
  .footer-links a {
    font-size: 14px;
    color: #64748b;
    text-decoration: none;
    transition: color 0.2s ease;
  }
  .footer-links a:hover {
    color: #111827;
  }
  .footer-contact {
    list-style: none;
    padding: 0;
    display: flex;
    flex-direction: column;
    gap: 16px;
  }
  .footer-contact li {
    display: flex;
    align-items: flex-start;
    gap: 12px;
    font-size: 14px;
    color: #64748b;
  }
  .footer-contact a {
    color: inherit;
    text-decoration: none;
  }
  .footer-contact a:hover {
    color: #111827;
  }
  .icon {
    font-size: 16px;
    flex-shrink: 0;
  }
  .footer-legal {
    list-style: none;
    padding: 0;
    display: flex;
    flex-direction: column;
    gap: 12px;
    font-size: 14px;
    color: #64748b;
  }
  .insurance-badge {
    display: inline-block;
    background: #f1f5f9;
    padding: 4px 12px;
    border-radius: 6px;
    font-size: 12px;
    font-weight: 600;
    margin-top: 8px;
    color: #065f46;
  }
  .footer-bottom {
    border-top: 1px solid #e2e8f0;
    padding-top: 32px;
    text-align: center;
    font-size: 13px;
    color: #94a3b8;
  }
</style>
